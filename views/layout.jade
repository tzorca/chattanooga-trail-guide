doctype html
html
	head
		title=title
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(href='/favicon.ico' rel='shortcut icon' type='image/x-icon')
		link(href='/stylesheets/stylesheet.css' rel='stylesheet' type='text/css')
		if isQA
			script(src='/javascripts/ga-script.js' type='text/javascript')
			script(src='/javascripts/jquery-1.10.1.min.js' type='text/javascript')
			script(src='/javascripts/route-matrix.js' type='text/javascript')
			script(src='/javascripts/content.js' type='text/javascript')
			script(src='/javascripts/park-content.js' type='text/javascript')
			script(src='/javascripts/place.js' type='text/javascript')
			script(src='/javascripts/area-map.js' type='text/javascript')
		else
			script(src='/javascripts-min/combined.min.js' type='text/javascript')
		block header
	body
		if siteContent
			div#header
				div.container
					div#logo
						a(href='/') Chattanooga Trail Guide
					ul
						li
							a(href='/') Trails
						li
							a(href='/map') Map
						li
							a(href='/links') Links

		block content
		
		if siteContent
			div#footer !{siteContent.footerText}
				p
